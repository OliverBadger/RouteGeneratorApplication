@page
@model RouteGeneratorApplication.Models.MapModel
@{
    // ViewData["Title"] = "Map Route Generator";
    var distanceInKm = ViewBag.DistanceInKm ?? 0;
    var waypoints = ViewBag.Waypoints ?? new List<Location>();
    string apiKey = ConfigSaves.GoogleMapsSecret;
}

<!DOCTYPE html>
<html>
<head>
    <title>Generate Circular Route</title>
    <script src="https://maps.googleapis.com/maps/api/js?key=@apiKey&callback=initMap"></script>
    <script>
        let map;

        function initMap() {
            // Default start location (San Francisco)
            const startLocation = { lat: 37.7749, lng: -122.4194 };

            map = new google.maps.Map(document.getElementById('map'), {
                zoom: 14,
                center: startLocation,
            });

            // Waypoints from the backend
            const waypoints = [
        @foreach (var wp in waypoints)
        {
            @:{ lat: @wp.Latitude, lng: @wp.Longitude }, // Proper Razor syntax in JavaScript
        }
                    ];

            if (waypoints.length > 0) {
                const routePath = new google.maps.Polyline({
                    path: waypoints,
                    geodesic: true,
                    strokeColor: '#FF0000',
                    strokeOpacity: 1.0,
                    strokeWeight: 2,
                });

                routePath.setMap(map);

                // Add markers for each waypoint
                waypoints.forEach((point) => {
                    new google.maps.Marker({
                        position: point,
                        map: map,
                        title: 'Waypoint',
                    });
                });
            }
        }
    </script>
</head>
<body onload="initMap()">
    <h1>Generate Circular Route</h1>

    <!-- Distance Input Form -->
    <form method="post" asp-action="GenerateRandomRoute">
        <label for="distanceInput">Enter distance (in km):</label>
        <input type="number" id="distanceInput" name="distanceInKm" placeholder="5, 10, 20" required min="1" step="1" />
        <button type="submit">Generate Route</button>
    </form>

    <!-- Map display -->
    <div id="map" style="height: 500px; width: 100%;"></div>
</body>
</html>